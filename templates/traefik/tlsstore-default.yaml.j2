# templates\traefik\tlsstore-default.yaml.j2
apiVersion: traefik.io/v1alpha1
kind: TLSStore
metadata:
  name: default  # Este nombre es obligatorio para que sea el TLSStore global
  namespace: "{{ traefik_namespace | default('kube-system') }}"  # Bien: usa traefik_namespace o kube-system por defecto
spec:
  defaultCertificate:
    secretName: "{{ internal_tls_secret_name }}"  # Debe apuntar a un Secret TLS v√°lido (tipo kubernetes.io/tls)