# templates/traefik/values_nopvc.yaml.j2
deployment:
  replicas: 1

logs:
  general:
    level: INFO
  access:
    enabled: true

metrics:
  prometheus:
    entryPoint: metrics
    addEntryPointsLabels: true
    addServicesLabels: true
    buckets: "{{ [0.1, 0.3, 1.2, 5.0] | join(',') }}"

service:
  enabled: true
  type: ClusterIP

securityContext:
  enabled: false

tls:
  enabled: true
  
entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"
  metrics:
    address: ":9100"

certificatesResolvers:
  letsencrypt:
    acme:
      email: "{{ letsencrypt_email }}"
      storage: "traefik-acme.json"
      http01:
        entryPoint: web