# templates/traefik/values_nopvc.yaml.j2
deployment:
  replicas: 1
  nodeSelector:
    kubernetes.io/hostname: traefik.socialdevs.site  # ✅ O elimínalo para permitir scheduling dinámico

logs:
  general:
    level: INFO
  access:
    enabled: true

securityContext:
  runAsUser: 1000
  runAsGroup: 1000

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https

  websecure:
    address: ":443"
    http:
      tls:
        certResolver: default  # ⚠️ Este requiere configuración de ACME o Let's Encrypt
        # Asegúrate de tener un resolver configurado en la sección de certificados

  metrics:
    address: ":9100"

  traefik:
    address: ":9000"  # Solo interno, no Service

service:
  enabled: true
  type: NodePort
  externalTrafficPolicy: Cluster
  ports:
    web:
      port: 80
      nodePort: 32591       # ✅ FIJO: usado para redirigir en HAProxy desde 80
    websecure:
      port: 443
      nodePort: 31541       # ✅ FIJO: usado por HAProxy desde 443 público
    metrics:
      port: 9100
      nodePort: 31900

metrics:
  prometheus:
    entryPoint: metrics
    addEntryPointsLabels: true
    addServicesLabels: true
    buckets: "0.1,0.3,1.2,5.0"

tls:
  enabled: true
  stores:
    default:
      defaultCertificate:
        secretName: internal-tls-secret  # ✅ Asegúrate que existe en kube-system
        # Verifica que el secreto con el certificado TLS esté creado

certificatesResolvers:
  default:
    acme:
      email: your-email@example.com   # Cambia por tu email
      storage: /data/acme.json        # Almacena los certificados en un archivo
      httpChallenge:
        entryPoint: web               # Asegura que el challenge HTTP está en el puerto 80

additionalArguments:
  - "--api.dashboard=true"
  - "--api.insecure=false"
  - "--ping=true"
  - "--entrypoints.web.http.redirections.entrypoint.to=websecure"
  - "--entrypoints.web.http.redirections.entrypoint.scheme=https"
  - "--entrypoints.websecure.http.tls=true"
  - "--entrypoints.websecure.http.tls.certresolver=default"   # Asegúrate de que sea el resolver de ACME
  - "--metrics.prometheus=true"
  - "--metrics.prometheus.entrypoint=metrics"
  - "--metrics.prometheus.addEntryPointsLabels=true"
  - "--metrics.prometheus.addServicesLabels=true"
  - "--metrics.prometheus.buckets=0.1,0.3,1.2,5.0"
  - "--providers.kubernetescrd"
  - "--providers.kubernetescrd.allowEmptyServices=true"
  - "--providers.kubernetesingress"
  - "--providers.kubernetesingress.allowEmptyServices=true"
  - "--providers.kubernetesingress.ingressendpoint.publishedservice=kube-system/traefik"