# templates\traefik\values.yaml.j2
deployment:
  kind: Deployment

ports:
  web:
    redirectTo: websecure
  websecure:
    tls:
      enabled: true

ingressRoute:
  dashboard:
    enabled: true
    annotations:
      kubernetes.io/ingress.class: traefik
    entryPoints: [websecure]
    auth:
      basic:
        secret: traefik-dashboard-auth

persistence:
  enabled: true
  name: acme-storage
  accessMode: ReadWriteOnce
  size: 1Mi
  path: /data
  storageClass: ""

volumes:
  - name: acme-storage
    hostPath:
      path: /data/traefik
      type: DirectoryOrCreate

volumeMounts:
  - name: acme-storage
    mountPath: /data
    readOnly: false

logs:
  general:
    level: INFO
  access:
    enabled: true

metrics:
  prometheus:
    entryPoint: metrics
    buckets: [0.1, 0.3, 1.2, 5.0]