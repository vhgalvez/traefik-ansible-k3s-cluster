# templates/traefik/traefik-dashboard-ingressroute-internal.yaml.j2
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: ingress-{{ app_name }}-dashboard-internal
  namespace: {{ traefik_namespace | default('kube-system') }}
  labels:
    app.kubernetes.io/name: {{ app_name }}
    app.kubernetes.io/component: ingress
    access: internal
    environment: prod
  annotations:
    maintained-by: devops@socialdevs.site
    created-by: ansible
spec:
  entryPoints:
    - websecure
  routes:
    - match: "Host(`{{ internal_domain }}`) && (PathPrefix(`/dashboard`) || PathPrefix(`/api`))"
      kind: Rule
      middlewares:
        - name: {{ traefik_dashboard_middleware_name }}
          namespace: {{ traefik_namespace | default('kube-system') }}  # Asegurando que el namespace se establezca correctamente
      services:
        - name: api@internal
          kind: TraefikService
  tls:
    secretName: {{ internal_tls_secret_name }}